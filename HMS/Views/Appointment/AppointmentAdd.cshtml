<div class="container-fluid">
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>Add Appointment</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-elements-wrapper">
    <form method="post" asp-action="AppointmentAdd" asp-controller="Appointment">
        <div class="card-style mb-30">
            <div class="input-style-1">
                <label>Doctor Name:</label>
                <select name="DoctorId" class="form-select form-select-md" required>
                    <option value="">-- Select Doctor --</option>
                    <option value="1">Dr. Emily Brown</option>
                </select>
            </div>

            <div class="input-style-1">
                <label>Specialization:</label>
                <input type="text" name="Specialization" placeholder="Enter Specialization" required />
            </div>

            <div class="input-style-1">
                <label>Scheduled By:</label>
                <input type="text" name="ScheduledBy" placeholder="Enter Scheduler Name" required />
            </div>

            <div class="input-style-1">
                <label>Patient Name:</label>
                <select name="PatientId" class="form-select form-select-md" required>
                    <option value="">-- Select Patient --</option>
                    <option value="1">Mike Wilson</option>
                </select>
            </div>

            <div class="input-style-1">
                <label>Email:</label>
                <input type="email" name="Email" placeholder="Enter Email" required />
            </div>

            <div class="input-style-1">
                <label>Appointment Date:</label>
                <input type="datetime-local" name="AppointmentDate" required />
            </div>

            <div class="input-style-1">
                <label>Status:</label>
                <select name="Status" class="form-select form-select-md" required>
                    <option value="">-- Select Status --</option>
                    <option value="Scheduled">Scheduled</option>
                    <option value="Pending">Pending</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>

            <div class="input-style-1">
                <label>Description:</label>
                <input type="text" name="Description" placeholder="Enter Description" />
            </div>

            <div class="input-style-1">
                <label>Remarks:</label>
                <input type="text" name="Remarks" placeholder="Enter Remarks" />
            </div>

            <button type="submit" class="btn btn-primary mt-2">Save</button>
            <a href="/Appointment" class="btn btn-secondary ms-3 mt-2">Cancel</a>

        </div>
    </form>
</div>
