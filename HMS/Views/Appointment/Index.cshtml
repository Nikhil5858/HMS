@model List<HMS.Models.Appointment>
<section class="table-components">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                @if (TempData["AppointmentMessage"] != null)
                {
                    <div class="d-flex justify-content-end">
                        <div class="alert alert-success" id="AppointmentMessage">@TempData["AppointmentMessage"]</div>
                    </div>
                }
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Appointment List</h2>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <a href="/Appointment/AppointmentAdd" class="btn btn-primary ms-5">+ Add Appointment</a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <form method="get" asp-action="Index" class="row mb-3">
            <div class="col-md-3">
                <input type="text" name="doctorName" class="form-control" placeholder="Filter by Doctor"
                       value="@ViewData["doctorName"]" />
            </div>
            <div class="col-md-3">
                <input type="text" name="patientName" class="form-control" placeholder="Filter by Patient"
                       value="@ViewData["patientName"]" />
            </div>
            <div class="col-md-3">
                <select name="status" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="Pending" selected="@(ViewData["status"]?.ToString() == "Pending")">Pending</option>
                    <option value="Scheduled" selected="@(ViewData["status"]?.ToString() == "Scheduled")">Scheduled</option>
                    <option value="Completed" selected="@(ViewData["status"]?.ToString() == "Completed")">Completed</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="date" name="date" class="form-control"
                       value="@ViewData["date"]" />
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </form>


         <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this department?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <a id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <div class="table-wrapper table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th style="min-width: 150px;">Doctor</th>
                                        <th style="min-width: 150px;">Patient</th>
                                        <th style="min-width: 170px;">Appointment Date</th>
                                        <th style="min-width: 200px;">Email</th>
                                        <th style="min-width: 150px;">Scheduled By</th>
                                        <th style="min-width: 100px;">Status</th>
                                        <th style="min-width: 150px;">Description</th>
                                        <th style="min-width: 150px;">Specialization</th>
                                        <th style="min-width: 150px;">Remarks</th>
                                        <th style="min-width: 100px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appoint in Model)
                                    {
                                        <tr>
                                            <td>@appoint.DoctorName</td>
                                            <td>@appoint.PatientName</td>
                                            <td>@appoint.AppointmentDate</td>
                                            <td>@appoint.Email</td>
                                            <td>@appoint.UserName</td>
                                            <td><span class="badge bg-warning text-dark ms-2">@appoint.AppointmentStatus</span></td>
                                            <td>@appoint.Description</td>
                                            <td>@appoint.Specialization</td>
                                            <td>@appoint.SpecialRemarks</td>
                                            <td>
                                                <div class="action">
                                                    <a asp-action="AppointmentEdit" asp-controller="Appointment" asp-route-id="@appoint.AppointmentID" ><i class="lni lni-pencil"></i></a>
                                                     <a href="#" class="ms-2 text-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                       data-delete-url="@Url.Action("DeleteAppointment", "Appointment", new { id = appoint.AppointmentID})">
                                                        <i class="lni lni-trash-can"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
        const openModel = document.getElementById('deleteModal');
        const confirmBtn = document.getElementById('confirmDeleteBtn');
            openModel.addEventListener('show.bs.modal', (event)=>{
            const trigger = event.relatedTarget;
            const deleteUrl = trigger.getAttribute('data-delete-url');
            confirmBtn.setAttribute('href', deleteUrl);
        });

        setTimeout(() => {
        var msg = document.getElementById("AppointmentMessage");
        if (msg) {
            msg.style.display = "none";
            }
        }, 3000);

</script>
